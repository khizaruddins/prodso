extends ../layouts/layouts

block content 
    .container.mt-3 
        h2 Your Cart 
        if products && products.length > 0
            table.table
                thead 
                    tr 
                        th Sr. no.
                        th Title 
                        th Price 
                        th Quantity
                        th Remove
                tbody 
                    each val, index in products
                        tr 
                            td #{index+1}
                            td 
                                a(href="/admin/products/" + val.productData.id) #{val.productData.product_name}
                            td #{val.productData.product_cost}
                            td #{val.qty}
                            td 
                                form(action="/cart-delete-item" method="POST")
                                    input(type="hidden" name="productId" value=val.productData.id)
                                    button.btn.btn-danger(type="submit") Delete

        else 
            h5 There is no Products in your cart